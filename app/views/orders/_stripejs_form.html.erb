

<div class="col-lg-6">
  <div class="form-group"> 
    <label class="control-label"><%= label_tag :card_number, "Credit Card Number " %></label>
    <div class="form-control"><%= text_field_tag :card_number, nil, name: nil %></div>
   </div>
</div>

<div class="col-lg-6">
  <div class="form-group">
        
         <label class="control-label"> <%= label_tag :card_month, "Card Expiration" %></label>
         <div class="form-control input-lg-2" ><%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%> </div>
         <div class="form-control input-lg-2" ><%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%></div>
 
   </div>
</div>

<div class="col-lg-6">
  <div class="form-group">    
    <label class="control-label"> <%= label_tag :card_code, "Security Code or Card (CVV)" %></label>
    <div class="form-control"><%= text_field_tag :card_code, nil, name: nil %></div>
   </div>
</div>

<div class="col-lg-6">
  <div class="form-group"> 
    <label class="control-label"> <%= label_tag :name, "Name on card" %></label>
    <div class="form-control"><%= text_field_tag :name, nil, name: nil %></div>
   </div>
</div>
<%= hidden_field_tag :stripe_card_token %>
<%= hidden_field_tag :stripeToken %>


<div id="stripe_error">
  <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
</div>
