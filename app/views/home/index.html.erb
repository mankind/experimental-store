<h1>Home#index</h1>

<% if user_signed_in? %>
  <p>  <%= @time %> </p>

  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
<br/>
<!--  https://github.com/plataformatec/devise/wiki/How-To:-Display-a-custom-sign_in-form-anywhere-in-your-app -->
<div class="row">
  <div class="form-line">
  <%= form_for("user", :url => user_session_path) do |f| %>
  
  <fieldset>
    <legend> Login form </legend>
    <div class="col-lg-4">
     <div clas="form-group">
       <div class="form-control"><%= f.text_field :email, :placeholder => "your email" %></div>
      </div>
    </div>
    
     <div class="col-lg-4">
       <div class="form-group">
         <div class="form-control"><%= f.password_field :password, :placeholder => "password" %></div>
       </div>
    </div>
    
    <div class="col-lg-4">
      <div class="form-group">
        <div class="btn btn-primary">
         <%= f.submit 'Sign in' %>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="form-group">
        <div class="checkbox">
          <%= f.check_box :remember_me, checked: true %>
         </div>
          <label class="control-label"><%= f.label :remember_me %></label>
        </div>   
     </div>
   </fieldset>
    
  <%= link_to "Forgot your password?", new_password_path('user') %>
  
<% end %> 
  </div>
</div>

<% end %> <!-- closes the else statement before the form -->
